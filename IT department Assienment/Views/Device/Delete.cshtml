@model IT_department_Assienment.View_Models.DeviceVM

@{
    ViewData["Title"] = "Delete Device";
}

<div class="container mt-4">
    <h1>Delete Device</h1>
    <h3>Are you sure you want to delete this device?</h3>
    <div>
        <h4>Device Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.AcquisitionDate)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.AcquisitionDate)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Memo)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Memo)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DeviceCategory)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.DeviceCategory.Id)</dd>
        </dl>

        <form asp-action="ConfirmDelete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group text-center">
                <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                <a asp-action="GetAllDevices" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
