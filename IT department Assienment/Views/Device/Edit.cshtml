@model IT_department_Assienment.View_Models.DeviceVM

@{
    ViewData["Title"] = "Edit Device";
}

<div class="container mt-4">
    <h1>Edit Device</h1>
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="SaveEdit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter device name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AcquisitionDate" class="control-label"></label>
                    <input asp-for="AcquisitionDate" class="form-control" type="date" />
                    <span asp-validation-for="AcquisitionDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Memo" class="control-label"></label>
                    <textarea asp-for="Memo" class="form-control" rows="3" placeholder="Enter memo..."></textarea>
                    <span asp-validation-for="Memo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DeviceCategory.Id" class="control-label"></label>
                    <select asp-for="DeviceCategory.Id" class="form-control" asp-items="ViewBag.DeviceCategory">
                        <option value="">Select Device Category</option>
                    </select>
                    <span asp-validation-for="DeviceCategory.Id" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save Changes" class="btn btn-success btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="GetAllDevices" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
