@model IT_department_Assienment.View_Models.DeviceVM

@{
    ViewData["Title"] = "Add Device";
}

<h1>Add Device</h1>

<h4>Device</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveAdd" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter device name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AcquisitionDate" class="control-label"></label>
                <input asp-for="AcquisitionDate" class="form-control" type="date" />
                <span asp-validation-for="AcquisitionDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Memo" class="control-label"></label>
                <textarea asp-for="Memo" class="form-control" rows="3" placeholder="Enter memo..."></textarea>
                <span asp-validation-for="Memo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DeviceCategory" class="control-label"></label>
                <select asp-for="DeviceCategory" class="form-control" asp-items="ViewBag.DeviceCategoryID">
                    <option value="">Select Device Category</option>
                </select>
                <span asp-validation-for="DeviceCategory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllDevices">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
